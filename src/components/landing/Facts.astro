---
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const { class: className } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class:list={["section py-20", className]}>
	<div class="container mx-auto px-4">
		<div class="text-center mb-12">
			<h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
				{t("coverage.title")}
			</h2>
			<p class="text-xl text-gray-300">
				{t("coverage.subtitle")}
			</p>
		</div>
		
		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
			<div class="bg-gray-800 p-6 rounded-lg text-center">
				<h3 class="text-xl font-bold text-white mb-2">Città di Castello</h3>
				<p class="text-gray-300">Centro storico, zona industriale e frazioni</p>
			</div>
			<div class="bg-gray-800 p-6 rounded-lg text-center">
				<h3 class="text-xl font-bold text-white mb-2">Umbertide</h3>
				<p class="text-gray-300">Città e comuni limitrofi</p>
			</div>
			<div class="bg-gray-800 p-6 rounded-lg text-center">
				<h3 class="text-xl font-bold text-white mb-2">Sansepolcro</h3>
				<p class="text-gray-300">Valtiberina Toscana</p>
			</div>
			<div class="bg-gray-800 p-6 rounded-lg text-center">
				<h3 class="text-xl font-bold text-white mb-2">Gubbio</h3>
				<p class="text-gray-300">Città medievale e zone turistiche</p>
			</div>
			<div class="bg-gray-800 p-6 rounded-lg text-center">
				<h3 class="text-xl font-bold text-white mb-2">Perugia</h3>
				<p class="text-gray-300">Capoluogo e provincia</p>
			</div>
			<div class="bg-gray-800 p-6 rounded-lg text-center">
				<h3 class="text-xl font-bold text-white mb-2">Alta Valle del Tevere</h3>
				<p class="text-gray-300">Tutti i comuni della zona</p>
			</div>
		</div>
		
		<div class="text-center">
			<p class="text-gray-300 max-w-4xl mx-auto leading-relaxed">
				{t("coverage.description")}
			</p>
		</div>
	</div>
</section>

<style>
	.section {
		background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%);
	}
</style>
