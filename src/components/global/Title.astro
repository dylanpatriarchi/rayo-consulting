---
interface Props {
	title: string;
	subtitle: string;
	class?: string;
	center?: boolean;
}

const { title, subtitle, class: className, center = true } = Astro.props;
---

<div class:list={[`flex ${center ? "justify-center" : ""}`, className]}>
	<div class={`inline-flex flex-col justify-center gap-4 ${center ? "items-center text-center" : ""}`}>
		<div class={`inline-flex items-center ${center ? " justify-center" : ""}`}>
			<span class="font-sans text-xs font-semibold uppercase tracking-wide text-white/80" set:html={subtitle} />
		</div>
		<h1 class="font-sans text-3xl font-bold text-white sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl 2xl:text-8xl">{title}</h1>
	</div>
</div>

<style>
	h1 {
		word-break: break-word;
		font-family: 'Inter', sans-serif;
		line-height: 1.1;
	}
	
	span {
		font-family: 'Inter', sans-serif;
	}
</style>
