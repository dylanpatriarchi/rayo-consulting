---
import Title from "@components/global/Title.astro";
import { getLangFromUrl, useTranslations, useTranslatedPath } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<section class="terms-section">
	<div class="terms-layout">
		<div class="terms-header">
			<Title 
				title="Terms of Service" 
				subtitle={lang === "it" ? "Ultimo aggiornamento: 01 Gennaio 2025" : "Last updated: January 01, 2025"} 
			/>
		</div>
		
		<div class="terms-content">
			{lang === "it" ? (
				<>
					<div class="terms-block">
						<h2>1. Accettazione dei Termini</h2>
						<p>
							Utilizzando i servizi di Rayo Consulting, accetti integralmente i presenti Termini di Servizio. 
							Se non accetti questi termini, non utilizzare i nostri servizi.
						</p>
					</div>

					<div class="terms-block">
						<h2>2. Chi Siamo</h2>
