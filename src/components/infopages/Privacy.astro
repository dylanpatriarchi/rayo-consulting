<style>
	.privacy-section {
		min-height: 100vh;
		position: relative;
	}

	.privacy-layout {
		width: 100vw;
		margin-left: calc(-50vw + 50%);
		padding: 4rem 2rem;
		background: linear-gradient(135deg, rgba(0, 0, 0, 0.05) 0%, rgba(0, 0, 0, 0.15) 100%);
	}

	.privacy-header {
		text-align: center;
		max-width: 800px;
		margin: 0 auto 4rem auto;
	}

	.privacy-content {
		max-width: 800px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		gap: 2.5rem;
	}

	.privacy-block {
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: 1rem;
		padding: 2rem;
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
	}

	.privacy-block:hover {
		background: rgba(255, 255, 255, 0.05);
		border-color: rgba(255, 255, 255, 0.12);
	}

	.privacy-block h2 {
		color: white;
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0 0 1rem 0;
		font-family: 'Inter', sans-serif;
		line-height: 1.3;
	}

	.privacy-block p {
		color: rgba(255, 255, 255, 0.8);
		font-size: 1rem;
		line-height: 1.6;
		margin: 0 0 1rem 0;
		font-family: 'Inter', sans-serif;
		font-weight: 400;
	}

	.privacy-block p:last-child {
		margin-bottom: 0;
	}

	.privacy-block ul {
		color: rgba(255, 255, 255, 0.8);
		font-size: 1rem;
		line-height: 1.6;
		margin: 0;
		padding-left: 1.5rem;
		font-family: 'Inter', sans-serif;
		font-weight: 400;
	}

	.privacy-block li {
		margin-bottom: 0.5rem;
	}

	.privacy-block li:last-child {
		margin-bottom: 0;
	}

	.contact-info {
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid rgba(255, 255, 255, 0.08);
		border-radius: 0.75rem;
		padding: 1.5rem;
		margin-top: 1rem;
	}

	.contact-info p {
		margin-bottom: 0.5rem;
		font-size: 0.95rem;
	}

	.contact-info p:last-child {
		margin-bottom: 0;
	}

	.contact-info strong {
		color: white;
		font-weight: 600;
	}

	.privacy-block a {
		color: rgba(255, 255, 255, 0.9);
		text-decoration: none;
		border-bottom: 1px solid rgba(255, 255, 255, 0.3);
		transition: all 0.3s ease;
		font-weight: 500;
	}

	.privacy-block a:hover {
		color: white;
		border-bottom-color: rgba(255, 255, 255, 0.6);
	}

	/* Desktop Layout */
	@media (min-width: 1024px) {
		.privacy-layout {
			padding: 6rem 4rem;
		}

		.privacy-block {
			padding: 2.5rem;
		}

		.privacy-block h2 {
			font-size: 1.75rem;
		}

		.privacy-block p,
		.privacy-block ul {
			font-size: 1.1rem;
		}
	}

	@media (min-width: 1400px) {
		.privacy-layout {
			padding: 6rem 8rem;
		}
	}

	/* Mobile Responsive */
	@media (max-width: 767px) {
		.privacy-layout {
			padding: 3rem 1.5rem;
		}

		.privacy-content {
			gap: 2rem;
		}

		.privacy-block {
			padding: 1.5rem;
		}

		.privacy-block h2 {
			font-size: 1.25rem;
		}

		.privacy-block p,
		.privacy-block ul {
			font-size: 0.95rem;
		}

		.contact-info {
			padding: 1.25rem;
		}
	}

	@media (max-width: 480px) {
		.privacy-layout {
			padding: 2.5rem 1rem;
		}

		.privacy-block {
			padding: 1.25rem;
		}

		.privacy-block h2 {
			font-size: 1.125rem;
		}

		.privacy-block p,
		.privacy-block ul {
			font-size: 0.9rem;
		}
	}
</style>
